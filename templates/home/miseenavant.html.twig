            {% for chat in chats %}

            <div class="col-12">

                <!-- Card -->
                <a class="card card-row shadow-light-lg mb-6 lift lift-lg" data-aos="fade-right">
                    <div class="row ">
                        <a class="col-12 col-md-6 bg-cover card-img-start"
