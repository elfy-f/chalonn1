                        <div
                                class="col-12 col-md-6">
                            <!-- Body -->
                            <a class="card-body" href="{{path('chat_details', {'nom':chat.nom })}}">

                                <!-- Heading -->
                                <h3>
                                    {{ chat.nom }}
                                </h3>


                                <!-- Text -->
                                <p class="mb-0 text-muted">
                                    {{ chat.caractere |u.truncate(200, '...', false) }}
                                </p>

                            </a>
                            <!-- Meta -->
                            <a class="card-meta">

                                <!-- Divider -->
                                <hr
                                        class="card-meta-divider">

                            </a>




                        </div>
                    </div>
            </div>


        {% endfor %}
        </div>
    </div> <!-- / .row -->
